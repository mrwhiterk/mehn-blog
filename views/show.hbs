{{#if blogPost}}
<div class="blogPost">
  <div class="row">
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">{{ blogPost.title }}<br>Created: {{ formatDate blogPost.createdAt }}</span>

          <p>{{ blogPost.content }}</p>
        </div>
        <div class="card-action">
          <a href="#" id="showBtn" class="btn btn-info">edit</a>
          <form action="/blogPost/{{blogPost._id}}?_method=DELETE" method="POST">
            <button class="btn btn-danger">delete</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
{{/if}}
<div class="edit-container">

  <form method="POST" action="/blogPost/{{blogPost._id}}?_method=PUT" class="row">
    <label for="title">Title:</label>
    <input type="text" name="title" value="{{blogPost.title}}">

    <label for="content">Content:</label>
    <input type="text" name="content" value="{{blogPost.content}}">

    <input class="btn btn-info" type="submit" value="Submit">
  </form>
</div>