{{#if blogPosts}}
<ul class="blogPosts">
  {{#each blogPosts}}
  <div class="blogPost">
    <div class="blogPost-title">
      <h1>{{ title }}</h1>
    </div>
    <div class="blogPost-content">
      <p>{{ content }}</p>
    </div>
    <div class="blogPost-action">
      <span class="blogPost__date">{{ createdAt }}</span>
    </div>
    <form action="/{{_id}}?_method=DELETE" method="POST">
      <button class="btn btn-danger">delete</button>
    </form>

  </div>
  {{/each}}
</ul>
{{/if}}